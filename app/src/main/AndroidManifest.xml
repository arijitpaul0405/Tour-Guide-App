<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arijitpaul.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TourGuide">
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".InfoShowActivity"
            android:exported="false" />
        <activity
            android:name=".BestSecretActivity"
            android:exported="false"
            android:label="Best Secrets"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FestivalActivity"
            android:exported="false"
            android:label="Festival"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CuisineActivity"
            android:exported="false"
            android:label="Cuisine"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RestaurantActivity"
            android:exported="false"
            android:label="Restaurant"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AttractionActivity"
            android:exported="false"
            android:label="Attraction"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>